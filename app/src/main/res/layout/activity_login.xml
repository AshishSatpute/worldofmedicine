<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".activities.Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/head_logo"
                    android:layout_width="270.0dp"
                    android:layout_height="110.0dp"
                    android:layout_marginLeft="75dp"
                    android:layout_marginRight="75dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/logo" />

                <android.support.v7.widget.CardView
                    android:layout_width="395dp"
                    android:layout_height="337dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="131dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:fontFamily="@font/liberationserifbold"
                            android:text="Login"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="28dp" />

                        <ImageView
                            android:id="@+id/imFb"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@drawable/fb" />

                        <ImageView
                            android:id="@+id/imGmail"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/gmail" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="18dp"
                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/etUserName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="15dp"
                                android:drawableStart="@drawable/ic_email_black_24dp"
                                android:drawablePadding="18dp"
                                android:fontFamily="@font/calibri"
                                android:hint="Email"
                                android:inputType="text"
                                android:maxLines="1"
                                android:textColor="@android:color/black"
                                android:textSize="20dp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="18dp"
                            android:textColorHint="@color/colorPrimary"
                            app:passwordToggleEnabled="true">

                            <EditText
                                android:id="@+id/etPass"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:drawableStart="@drawable/ic_lock_black_24dp"
                                android:drawablePadding="18dp"
                                android:fontFamily="@font/calibri"
                                android:hint="Password"
                                android:inputType="textPassword"
                                android:maxLines="1"
                                android:textColor="@android:color/black"
                                android:textSize="20dp" />

                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="205dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorPrimary"
                android:background="@drawable/ronded_button1"
                android:fontFamily="@font/liberationserifbold"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="24sp" />

                <TextView

                    android:id="@+id/txt_forgotpassword"
                    android:layout_width="155dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:text="@string/forget_pass"
                    android:textColor="@color/colorMenu"
                    android:textSize="15sp"
                    />


            <TextView
                android:id="@+id/tvSkip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/acme"
                android:gravity="center"
                android:text="Skip"
                android:layout_marginTop="15dp"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />


            <android.support.design.widget.CoordinatorLayout
                android:id="@+id/coordinatorLay"
                android:outlineAmbientShadowColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.design.widget.CoordinatorLayout>
            <TextView
                android:id="@+id/tvSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/liberationserifbold"
                android:gravity="center"
                android:text="Not a Member?Sign Up Now"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>