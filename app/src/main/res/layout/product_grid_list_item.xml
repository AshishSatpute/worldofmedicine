<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/colorAccent"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivItemPic"
            android:layout_width="242dp"
            android:layout_height="150dp"
            android:layout_marginTop="27dp"
            android:foregroundGravity="center"
            android:src="@drawable/product10" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginTop="178dp"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/tvItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="180dp"
            android:fontFamily="@font/liberationserifregular"
            android:gravity="center"
            android:text="Product Name"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="11dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="103dp"
            android:layout_marginLeft="51dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="161dp"
            android:gravity="center"
            android:text="@string/rupee"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvRepees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="115dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="1dp"
            android:fontFamily="@font/liberationserifregular"
            android:gravity="left"
            android:text="@string/product_price"
            android:textColor="@android:color/black"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="200dp"
            android:gravity="right"
            android:fontFamily="@font/liberationserifbold"
            android:text="@string/product_price"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvProid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvItemTitle"
            android:layout_alignParentTop="true"
            android:layout_marginStart="163dp"
            android:layout_marginTop="2dp"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/liberationserifbold"
            android:text=""
            android:textColor="@color/colorMenu"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tvProid1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvItemTitle"
            android:layout_alignParentTop="true"
            android:layout_marginStart="92dp"
            android:layout_marginTop="2dp"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/liberationserifbold"
            android:gravity="center"
            android:text="Product id:"
            android:textColor="@color/colorMenu"
            android:textSize="15dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>